# Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_ORIGIN=http://localhost:5173
APP_BASE_URL=http://localhost:3000
PUBLIC_APP_URL=http://localhost:5173
DEMO_MODE=false
COMPLIANCE_MODE=development

# SideShift Configuration (Get from https://sideshift.ai/account)
SIDESHIFT_SECRET=your_private_key_here
AFFILIATE_ID=your_account_id_here
COMMISSION_RATE=0.0

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_chat_id_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_ALERTS_ENABLED=false
EMAIL_ALERTS_ENABLED=false

# Security

# JWT_SECRET: Used for signing authentication tokens and deep links (min 32 chars)
# Generate secure key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_min_32_chars

# WEBHOOK_SECRET: Used for webhook signature verification in webhook retry operations
# This secret is used when manually retrying webhooks from the dead letter queue
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WEBHOOK_SECRET=your_webhook_secret_for_admin_operations

# ADMIN_API_KEY: Admin dashboard API authentication key (min 32 chars)
# Use this in Authorization header: "Bearer <ADMIN_API_KEY>" for admin endpoints
# Admin endpoints: /api/admin/stats, /api/admin/users, /api/admin/shifts, /api/admin/alerts
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_API_KEY=your_admin_api_key_here_min_32_chars

# RPC Provider URLs (JSON map: chain alias â†’ RPC URL)
# Example: {"eth":"https://eth.llamarpc.com","base":"https://mainnet.base.org","arb":"https://arb1.arbitrum.io/rpc"}
PROVIDER_RPC_URLS_JSON={}

# Logging Configuration
LOG_LEVEL=info